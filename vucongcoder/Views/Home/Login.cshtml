@{
    ViewBag.Title = "Login";
}

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body, html {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    .login-container {
        background: #fff;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(101, 16, 242, 0.3);
        width: 100%;
        max-width: 400px;
        animation: fadeInUp 1s ease forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h2 {
        margin-bottom: 25px;
        font-weight: 500;
        color: #6610f2;
        text-align: center;
        letter-spacing: 1.2px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    label {
        font-weight: 200;
        color: #4a4a4a;
        display: block;
        margin-bottom: 8px;
    }

    input.form-control {
        border-radius: 8px;
        padding: 10px 15px 10px 40px; /* padding-left for icon */
        box-shadow: none;
        border: 1.5px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        font-size: 1rem;
    }

    input.form-control:focus {
        border-color: #6610f2;
        box-shadow: 0 0 8px rgba(101, 16, 242, 0.3);
        outline: none;
    }

    /* Icon animation - subtle bounce */
    .form-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
        pointer-events: none;
        font-size: 18px;
        animation: bounce 2s infinite ease-in-out;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(-50%) translateY(0);
        }
        50% {
            transform: translateY(-50%) translateY(-5px);
        }
    }

    .btn-login {
        width: 100%;
        background: #6610f2;
        color: #fff;
        font-weight: 500;
        padding: 12px;
        border-radius: 10px;
        border: none;
        transition: background-color 0.4s ease, transform 0.2s ease;
        font-size: 1rem;
        box-shadow: 0 4px 12px rgba(101, 16, 242, 0.3);
    }

    .btn-login:hover {
        background-color: #520dc2;
        transform: scale(1.05);
        box-shadow: 0 6px 18px rgba(101, 16, 242, 0.5);
    }

    .btn-login:active {
        transform: scale(0.98);
        transition: transform 0.1s ease;
    }

    /* Responsive */
    @@media (max-width: 480px) {
        .login-container {
            padding: 30px 20px;
        }
    }
</style>

<div class="login-container shadow-sm">
    <h2>Login account </h2>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <form method="post" action="@Url.Action("Login", "Home")">
        <div class="form-group">
            <label for="username">Username</label>
            <i class="fas fa-user form-icon"></i>
            <input type="text" class="form-control" id="username" name="Username" placeholder="Enter your username" required autofocus />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <i class="fas fa-lock form-icon"></i>
            <input type="password" class="form-control" id="password" name="Password" placeholder="Enter your password" required />
        </div>

        <button type="submit" class="btn btn-login mt-3">Login</button>
    </form>
</div>
